{
	"name": "hippius-ui-code-helper",
	"displayName": "hippius-ui-code-helper",
	"description": "hippius-ui的编码插件,帮助你更好的编写hippius-ui",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.47.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:html",
		"onLanguage:vue"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "hippius.search",
				"title": "hippius.search"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "hippius.search",
					"group": "navigation"
				}
			]
		},
		"snippets": [
			{
				"language": "vue-html",
				"path": "./snippets/tags.json"
			},
			{
				"language": "html",
				"path": "./snippets/tags.json"
			}
		],
		"configuration": {
			"type": "object",
			"title": "hippius-ui-code-helper Configuration",
			"properties": {
				"hippius-ui-code-helper.quotes": {
					"type": "string",
					"default": "double"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"@types/vscode": "^1.47.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"@typescript-eslint/parser": "^2.30.0",
		"eslint": "^6.8.0",
		"fs-extra": "^9.0.1",
		"glob": "^7.1.6",
		"lodash": "^4.17.19",
		"mocha": "^7.1.2",
		"remark-parse": "^8.0.3",
		"remark-stringify": "^8.1.1",
		"typescript": "^3.8.3",
		"unified": "^9.0.0",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"pretty": "^2.0.0"
	}
}
